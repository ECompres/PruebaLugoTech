@model  LugoTechCrud.Models.Usuarios
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<center>
    
        <div class="row">
            <div class="col-md-6">
                <section>
                    <form asp-controller="Usuarios" asp-action="Login" method="post">
                        <h4>Iniciar Sesion</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group text-left">
                            <label asp-for="NombreUsuario">Nombre Usuario</label>
                            <input asp-for="NombreUsuario" class="form-control" />
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>
                        <div class="form-group text-left">
                            <label asp-for="Contra"></label>
                            <input type="password" asp-for="Contra" class="form-control" />
                            <span asp-validation-for="Contra" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Iniciar Sesion</button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    
</center>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}